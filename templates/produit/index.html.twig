{% extends "_template.html.twig" %}

{% block title %}Produits{% endblock %}

{% block content %}
    <div class="section">

        <h1 class="title">Produits: {{ liste_produits|length }} </h1>

        {# Inclusion du fichier des messages flash #}
        {% include 'includes/flash.html.twig' %}

        <a href="{{ path('produit_ajout') }}" class="btn btn-info">Nouveau produit</a>

        <table border="1" class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Modifier / Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in liste_produits %}    
                <tr>
                    <th>{{ produit.id }}</th>
                    <td>{{ produit.nom }}</td>
                    <td>{{ produit.description|slice(0, 25) }}</td>
                    <td class="text-right">{{ produit.prix }} €</td>
                    <td>{{ produit.quantite }}</td>
                    <td>
                        <a href="{{ path('produit_modif', {id: produit.id}) }}" class="btn btn-success">Modifier</a>
                        <a href="{{ path('produit_supprimer', {id: produit.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table> 
    </div>

{% endblock %}
